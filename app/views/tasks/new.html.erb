<div class="container">
  <h1>New Task</h1>

  <div class="row">
    <div class="col-md-4">
      <p>Guidelines for tasks</p>
      <ul>
        <li>Please keep them clear and to the point.</li>
        <li>Be precise in their directions.</li>
        <li>Follow up with the supervisor so that they understand.</li>
      </ul>
    </div>
    <div class="col-md-8">
      <%= form_for [@user, @task] do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: "Enter the task title." %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter the info for the task here." %>
        </div>
        <div class="form-group">
          <%= f.label "Days allowed for task" %>
          <%= f.select :days_to_complete, options_for_select((1..15), selected_key = f.object.days_to_complete), class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
